<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.depaul.csc472.nicolay_m_finalproject.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton0"
        app:layout_constraintRight_toLeftOf="@+id/sbButton1"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@+id/sbButton1"
        app:layout_constraintBottom_toBottomOf="@+id/sbButton1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton5"
        app:layout_constraintTop_toTopOf="@+id/sbButton4"
        app:layout_constraintBottom_toBottomOf="@+id/sbButton4"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/sbButton4"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton3"
        app:layout_constraintRight_toLeftOf="@+id/sbButton4"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@+id/sbButton4"
        app:layout_constraintBottom_toBottomOf="@+id/sbButton4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton4"
        app:layout_constraintTop_toBottomOf="@+id/sbButton1"
        app:layout_constraintRight_toRightOf="@+id/sbButton1"
        app:layout_constraintLeft_toLeftOf="@+id/sbButton1"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton8"
        app:layout_constraintTop_toTopOf="@+id/sbButton7"
        app:layout_constraintBottom_toBottomOf="@+id/sbButton7"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/sbButton7"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton6"
        app:layout_constraintRight_toLeftOf="@+id/sbButton7"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@+id/sbButton7"
        app:layout_constraintBottom_toBottomOf="@+id/sbButton7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton7"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/sbButton4"
        app:layout_constraintRight_toRightOf="@+id/sbButton4"
        app:layout_constraintLeft_toLeftOf="@+id/sbButton4"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:layout_width="239dp"
        android:layout_height="60dp"
        android:id="@+id/sbButtonMenu"
        app:layout_constraintTop_toBottomOf="@+id/sbButton7"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/sbButton7"
        app:layout_constraintRight_toRightOf="@+id/sbButton7"
        android:text="@string/menu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton2"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/sbButton1"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/sbButton1"
        app:layout_constraintBottom_toBottomOf="@+id/sbButton1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:id="@+id/sbButton1"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
