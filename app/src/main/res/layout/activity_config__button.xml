<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_config__button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.depaul.csc472.nicolay_m_finalproject.Config_ButtonActivity">


    <Button
        android:text="@string/back"
        android:layout_height="wrap_content"
        android:id="@+id/configButtonBack"
        android:layout_width="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="144dp"
        app:layout_constraintLeft_toLeftOf="@+id/configButtonChoices"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="@string/finish"
        android:layout_height="wrap_content"
        android:id="@+id/configButtonFinish"
        app:layout_constraintTop_toTopOf="@+id/configButtonBack"
        app:layout_constraintBottom_toBottomOf="@+id/configButtonBack"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/configButtonBack"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_width="160dp" />

    <RadioGroup
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/configButtonChoices"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/configRadio0"
                android:layout_weight="0.47"
                app:layout_constraintRight_toLeftOf="@+id/detailRadio1"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintTop_toTopOf="@+id/detailRadio1"
                app:layout_constraintBottom_toBottomOf="@+id/detailRadio1"
                app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/configRadio5"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@+id/detailRadio4"
                app:layout_constraintBottom_toBottomOf="@+id/detailRadio4"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/detailRadio4"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailRadio4"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/detailRadio1"
                app:layout_constraintLeft_toLeftOf="@+id/detailRadio1"
                app:layout_constraintRight_toRightOf="@+id/detailRadio1"
                android:layout_marginTop="32dp"
                app:layout_constraintHorizontal_bias="0.0" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/configRadio8"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@+id/detailRadio7"
                app:layout_constraintBottom_toBottomOf="@+id/detailRadio7"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/detailRadio7"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/configRadio6"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                app:layout_constraintRight_toLeftOf="@+id/detailRadio7"
                app:layout_constraintTop_toTopOf="@+id/detailRadio7"
                app:layout_constraintBottom_toBottomOf="@+id/detailRadio7"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintVertical_bias="0.0" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailRadio7"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/detailRadio4"
                app:layout_constraintLeft_toLeftOf="@+id/detailRadio4"
                app:layout_constraintRight_toRightOf="@+id/detailRadio4"
                app:layout_constraintHorizontal_bias="0.0" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/configRadio2"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toRightOf="@+id/detailRadio1"
                android:layout_marginLeft="32dp"
                app:layout_constraintTop_toTopOf="@+id/detailRadio1"
                app:layout_constraintBottom_toBottomOf="@+id/detailRadio1"
                app:layout_constraintVertical_bias="0.0" />

            <RadioButton
                android:id="@+id/detailRadio1"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/configRadio3"
                android:background="@drawable/button_background"
                android:button="@android:color/transparent"
                app:layout_constraintRight_toLeftOf="@+id/detailRadio4"
                app:layout_constraintTop_toTopOf="@+id/detailRadio4"
                app:layout_constraintBottom_toBottomOf="@+id/detailRadio4"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>
    </RadioGroup>



</android.support.constraint.ConstraintLayout>
